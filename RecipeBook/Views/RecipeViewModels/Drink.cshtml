@model IEnumerable<RecipeBook.ViewModels.RecipeViewModel>

@{
    ViewData["Title"] = "Drink";
}

<h1>Drink</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type_of_dish)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type_of_dish)
                </td>
            </tr>
        }
    </tbody>
</table>
